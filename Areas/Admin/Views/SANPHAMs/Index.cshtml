@model IEnumerable<Demo4SQLMVC.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int i = 1;
}


<div class="card shadow mb-4">

    <p>
        @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary fa fa-plus" })
    </p>
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            Tên Sản Phẩm
                        </th>
                        <th>
                            Hãng Sản Phẩm
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Ảnh
                        </th>
                        <th>
                            Giá sản phẩm
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>STT</th>
                        <th>
                            Tên Sản Phẩm
                        </th>
                        <th>
                            Hãng Sản Phẩm
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Ảnh
                        </th>
                        <th>
                            Giá sản phẩm
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">@i</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENSP)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.HANGSP)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.SOLUONG)
                            </td>
                            <td style="text-align:center">
                                <img src="/Uploadimg/@item.ANH" alt="Alternate Text" style="width:100px" />
                            </td>
                            <td style="text-align:center">
                                @*@Html.FormatValue(item.GIASPB, "/\B(?=(\d{3})+(?!\d))/g, '.'")*@
                                @Html.DisplayFor(modelItem => item.GIASPB)
                            </td>
                            <td style="text-align:center">
                                @Html.ActionLink(" ", "Edit", new { id = item.MASP }, new { @class = "btn btn-warning fa fa-pen" })
                                @Html.ActionLink(" ", "Details", new { id = item.MASP }, new { @class = "btn btn-info  fa fa-eye" })
                                @Html.ActionLink(" ", "Delete", new { id = item.MASP }, new { @Onclick = "return confirm('Muốn xoá không?');", @class = "btn btn-danger fa fa-trash" })
                            </td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/Assets/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/admin/js/demo/datatables-demo.js"></script>
}

